#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,c=0;
    cin>>n;
    int a[n];
    int b[n];
    for(int i=0;i<n;i++)cin>>a[i];
    for(int i=0;i<n;i++)cin>>b[i];
    for(int i=1;i<n;i++)
    {
        a[i]=a[i-1]+a[i];
        b[i]=b[i-1]+b[i];
    }
    for(int i=1;i<n;i++)
    {
        int la=a[i-1];
        int ra=a[n-1]-a[i-1];
        int lb=b[i-1];
        int rb=b[n-1]-b[i-1];
        if((la==ra) && (lb==rb))
        {
            c++;
        }
    }
  cout<<c;
}
